<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_border">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Sửa sản phẩm"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/bg_yellow_top_left_right">
    </TextView>

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgItemEdit"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/hinh3">
        </ImageView>

        <EditText
            android:id="@+id/edtItemNameEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Tên Sản Phẩm"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center">
        </EditText>

        <EditText
            android:id="@+id/edtItemPriceEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Giá Tiền"
            android:inputType="number"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center">
        </EditText>

        <EditText
            android:id="@+id/edtItemCategoryEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Thể loại (trasua , trachanh , topping , anvat)"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center">
        </EditText>

        <EditText
            android:id="@+id/edtItemRatingEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Đánh giá (5.0)"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center">
        </EditText>
        <EditText
            android:id="@+id/edtItemHotEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Sản Phẩm Nổi Bật (hot)"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center">
        </EditText>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_gray_border"
                android:text="Hủy">
            </Button>
            <Button
                android:id="@+id/btnEdit"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_yellow_border"
                android:text="Sửa">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>