<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_border">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Cần đăng nhập để mua hàng"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/bg_yellow_top_left_right">
    </TextView>

    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn ơi đăng nhập để mình lấy thông tin giao hàng cho bạn nhé"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center">
        </TextView>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_gray_border"
                android:text="Đi Đăng Nhập">
            </Button>
            <Button
                android:id="@+id/btnYes"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_yellow_border"
                android:text="Đăng Nhập rồi">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>